@using TravelTripProje.Models.Sınıflar
@model List<Blog>

<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.BlogImage" alt="" style="width:275px;height:185px;" />
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
               <p>@x.Aciklama.Substring(0, 100)</p>
                <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Yazıyı Oku</span></a></p>
            </div>
        </div>
    }
</div>
@Html.Action("Partial2","Default")
<div class="clear"></div>

